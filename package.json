{
  "name": "@blueagle/gcc-ts-bundler",
  "version": "0.47.1",
  "description": "A TypeScript bundler that uses Google Closure Compiler to bundle TypeScript code.",
  "type": "module",
  "bin": {
    "gcc-ts-bundler": "./bin/gcc-ts-bundler.cjs"
  },
  "devDependencies": {
    "@types/diff-match-patch": "^1.0.36",
    "@types/glob": "8.1.0",
    "@types/google-closure-compiler": "^20231112.0.0",
    "@types/minimist": "^1.2.5",
    "@types/node": "^22.9.0",
    "@types/source-map-support": "^0.5.10",
    "diff-match-patch": "^1.0.5",
    "eslint-plugin-perfectionist": "^3.9.1",
    "glob": "11.0.0",
    "prettier": "^3.3.3",
    "source-map": "^0.8.0-beta.0",
    "source-map-support": "^0.5.21",
    "tslib": "^2.8.1",
    "typescript-eslint": "^8.13.1-alpha.1"
  },
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./bin --format cjs --external minimist --external typescript --banner \"#!/usr/bin/env node\" --entry-naming \"gcc-ts-bundler.cjs\" --target node",
    "lint": "bun --bun prettier \"**/*.ts\" --write && bun --bun eslint \"**/*.ts\" --fix"
  },
  "keywords": [
    "typescript",
    "closure"
  ],
  "dependencies": {
    "google-closure-compiler": "20241105.0.0-nightly",
    "minimist": "1.2.8",
    "typescript": "^5.8.0-dev.20241106"
  },
  "files": [
    "bin",
    "README.md"
  ]
}